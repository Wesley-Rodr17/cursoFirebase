<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.cursofirebase.Activity.CadastroUsuarioComumActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <TextView
                android:text="Cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/idNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:layout_marginTop="16dp"
                android:inputType="text"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/idCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF"
                android:layout_marginTop="16dp"
                android:inputType="number"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/idRua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rua"
                android:layout_marginTop="16dp"
                android:inputType="text"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/idNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÃºmero"
                android:layout_marginTop="16dp"
                android:inputType="number"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/idEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:layout_marginTop="16dp"
                android:inputType="textEmailAddress"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/idSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPassword"
                android:layout_marginTop="16dp"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/idComSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repita a Senha"
                android:inputType="textPassword"
                android:layout_marginTop="16dp"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <RadioButton
                    android:id="@+id/idrbFem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDarken"
                    android:text="Feminino"/>
                <RadioButton
                    android:id="@+id/idrbMas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDarken"
                    android:text="Masculino"/>
            </RadioGroup>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/idbtnCadastrarUsuarioC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:layout_marginTop="16dp"
                app:bootstrapBrand="primary"
                app:bootstrapSize="xl"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"/>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/idbtnCancelarUsuarioC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cancelar"
                app:bootstrapBrand="danger"
                app:bootstrapSize="xl"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>