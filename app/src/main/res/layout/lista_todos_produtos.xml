<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutProdutoCardapio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoProdutoCardapio"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="1dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/txtNomeProdutoCardapio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome_Produto"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtDescricaoProdutoCardapio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descricao_Produto"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txtPrecoProdutoCardapio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preco_Produto"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtServeQtdProdutoCardapio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serve_Produto"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>